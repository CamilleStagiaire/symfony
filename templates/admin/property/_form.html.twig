{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.title)}}</div>
    <div class="col-md-4">{{ form_row(form.surface)}}</div>
    <div class="col-md-4">{{ form_row(form.price)}}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.rooms)}}</div>
    <div class="col-md-4">{{ form_row(form.bed)}}</div>
    <div class="col-md-4">{{ form_row(form.animal)}}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.adress)}}</div>
    <div class="col-md-4">{{ form_row(form.city)}}</div>
    <div class="col-md-4">{{ form_row(form.postal_code)}}</div>
</div>
<div class="row">
    {{ form_row(form.description)}}
</div>
<div class="row">
    {{ form_row(form.options)}}
</div>
<button class="btn btn-primary">{{ button|default('Enregistrer')}}</button>
{{ form_end(form)}}